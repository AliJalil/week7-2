<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cont1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/container_margin_top"
        android:layout_marginEnd="@dimen/container_margin_end"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <TextView
            android:id="@+id/tv0"
            android:layout_width="@dimen/container_width"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/container_margin_end"
            android:background="@drawable/rounded_corner_view"

            android:maxLines="4"
            android:paddingLeft="@dimen/tv_padding"
            android:paddingTop="@dimen/tv_padding"
            android:paddingRight="@dimen/tv_padding"
            android:paddingBottom="@dimen/tv_bottom_padding"

            android:text="@string/dummy_txt"
            android:textColor="@color/txt_color_white"
            android:textSize="@dimen/chat_txt_size"
            app:layout_constraintBottom_toBottomOf="parent"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.898"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.061" />

        <ImageView
            android:layout_width="@dimen/check_mrk_size"
            android:layout_height="@dimen/check_mrk_size"
            android:layout_marginEnd="@dimen/extra_end_padding"
            android:src="@drawable/ic_outline_done_all_24"
            app:layout_constraintBottom_toBottomOf="@+id/tv0"
            app:layout_constraintEnd_toEndOf="@+id/tv0"
            app:tint="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/extra_end_padding"
            android:text="3:22"
            android:textColor="@color/teal_700"
            android:textSize="@dimen/check_mark_txt_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/tv0" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cont2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/container_margin_top"
       android:layout_marginEnd="@dimen/container_margin_end"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cont1">

        <TextView
            android:id="@+id/tv1"
            android:layout_width="@dimen/container_width"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/container_margin_end"
            android:background="@drawable/rounded_corner_view"

            android:maxLines="4"
            android:paddingLeft="@dimen/tv_padding"
            android:paddingTop="@dimen/tv_padding"
            android:paddingRight="@dimen/tv_padding"
            android:paddingBottom="@dimen/tv_bottom_padding"

            android:text="@string/dummy_txt"
            android:textColor="@color/txt_color_white"
            android:textSize="@dimen/chat_txt_size"
            app:layout_constraintBottom_toBottomOf="parent"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.898"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.061" />

        <ImageView
            android:layout_width="@dimen/check_mrk_size"
            android:layout_height="@dimen/check_mrk_size"
            android:layout_marginEnd="@dimen/extra_end_padding"
            android:src="@drawable/ic_outline_done_all_24"
            app:layout_constraintBottom_toBottomOf="@+id/tv1"
            app:layout_constraintEnd_toEndOf="@+id/tv1"
            app:tint="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/extra_end_padding"
            android:text="3:22"
            android:textColor="@color/teal_700"
            android:textSize="@dimen/check_mark_txt_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/tv1" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cont3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/container_margin_end"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cont2">

        <TextView
            android:id="@+id/tv2"
            android:layout_width="@dimen/container_width"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/container_margin_end"
            android:background="@drawable/rounded_corner_view_white"

            android:maxLines="4"
            android:paddingLeft="@dimen/tv_padding"
            android:paddingTop="@dimen/tv_padding"
            android:paddingRight="@dimen/tv_padding"
            android:paddingBottom="@dimen/tv_bottom_padding"

            android:text="@string/dummy_txt"
            android:textColor="@color/txt_color_black"
            android:textSize="@dimen/chat_txt_size"
            app:layout_constraintBottom_toBottomOf="parent"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.898"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.061" />

        <ImageView
            android:layout_width="@dimen/check_mrk_size"
            android:layout_height="@dimen/check_mrk_size"
            android:layout_marginStart="@dimen/extra_end_padding"
            android:src="@drawable/ic_outline_done_all_24"
            app:layout_constraintBottom_toBottomOf="@+id/tv2"
            app:layout_constraintStart_toStartOf="parent"
            app:tint="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/extra_end_padding"
            android:text="5:22"
            android:textColor="@color/teal_700"
            android:textSize="@dimen/check_mark_txt_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cont4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/container_margin_top"
        android:layout_marginEnd="@dimen/container_margin_end"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cont3">

        <TextView
            android:id="@+id/tv3"
            android:layout_width="@dimen/container_width"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/container_margin_end"
            android:background="@drawable/rounded_corner_view"

            android:maxLines="4"
            android:paddingLeft="@dimen/tv_padding"
            android:paddingTop="@dimen/tv_padding"
            android:paddingRight="@dimen/tv_padding"
            android:paddingBottom="@dimen/tv_bottom_padding"

            android:text="@string/dummy_txt"
            android:textColor="@color/txt_color_white"
            android:textSize="@dimen/chat_txt_size"
            app:layout_constraintBottom_toBottomOf="parent"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.898"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.061" />

        <ImageView
            android:layout_width="@dimen/check_mrk_size"
            android:layout_height="@dimen/check_mrk_size"
            android:layout_marginEnd="@dimen/extra_end_padding"
            android:src="@drawable/ic_outline_done_all_24"
            app:layout_constraintBottom_toBottomOf="@+id/tv3"
            app:layout_constraintEnd_toEndOf="@+id/tv3"
            app:tint="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/extra_end_padding"
            android:text="3:22"
            android:textColor="@color/teal_700"
            android:textSize="@dimen/check_mark_txt_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/tv3" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cont5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <EditText
            android:id="@+id/chat_edit_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/chat_txt_horizontal_margin"
            android:layout_marginTop="@dimen/chat_txt_vertical_margin"
            android:layout_marginEnd="@dimen/chat_txt_horizontal_margin"
            android:layout_marginBottom="@dimen/chat_txt_vertical_margin"
            android:background="@drawable/fully_rounded_view_gray"
            android:gravity="start"
            android:hint="@string/type_here"
            android:paddingStart="@dimen/edit_txt_padding_start"
            android:paddingEnd="@dimen/edit_txt_padding_start"
            android:paddingTop="@dimen/edit_txt_padding_vertical"
            android:paddingBottom="@dimen/edit_txt_padding_vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/sticker_icon"
            android:layout_width="@dimen/chat_img_width"
            android:layout_height="@dimen/chat_img_width"
            android:layout_marginStart="@dimen/chat_img_margin"
            app:layout_constraintBottom_toBottomOf="@+id/chat_edit_txt"
            app:layout_constraintStart_toStartOf="@+id/chat_edit_txt"
            app:layout_constraintTop_toTopOf="@+id/chat_edit_txt"
            app:srcCompat="@drawable/_1" />

        <ImageView
            android:id="@+id/mic_icon"
            android:layout_width="@dimen/chat_img_width"
            android:layout_height="@dimen/chat_img_width"
            android:layout_marginEnd="@dimen/chat_img_margin"
            app:layout_constraintBottom_toBottomOf="@+id/chat_edit_txt"
            app:layout_constraintEnd_toEndOf="@+id/chat_edit_txt"
            app:layout_constraintTop_toTopOf="@+id/chat_edit_txt"
            app:srcCompat="@drawable/_3" />

        <ImageView
            android:id="@+id/attach_icon"
            android:layout_width="@dimen/chat_img_width"
            android:layout_height="@dimen/chat_img_width"
            android:layout_marginEnd="@dimen/chat_img_margin"
            app:layout_constraintBottom_toBottomOf="@+id/chat_edit_txt"
            app:layout_constraintEnd_toStartOf="@+id/mic_icon"
            app:layout_constraintTop_toTopOf="@+id/chat_edit_txt"
            app:srcCompat="@drawable/_2" />
    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>